{% extends '../layouts/default.twig' %}
{% set head_title = 'Sample Page 2' %}
{% set body_class = '' %}
{% set menu_active = 'sample-page-2' %}

{% block page %}

  <style>
    /* Some inline styling for the demo purpose */
    .demo {
      padding: 4rem 0;
    }
    .section {
      margin-bottom: 4rem;
      padding-bottom: 4rem;
      border-bottom: 1px solid #ccc;
    }
    .section-title {
      color: rgba(0,0,0,.65);
    }
    .section-title small {
      display: block;
    }
    pre {
      font-size: .875rem;
      margin: 0;
    }
    .highlight {
      background-color: #f8f9fa;
      padding-left: 1rem;
      padding-right: 1rem;
      border-top: 1px solid #eee;
    }
    code.hljs {
      background-color: transparent;
    }
  </style>

  {% include '../../modules/navbar/navbar.twig' %}

  <div class="demo" data-router-wrapper>
    <div class="container" data-router-view="page2">
        <h1>Page 2</h1>

        <img src="https://s3-us-west-2.amazonaws.com/coltonmarsalaphoto/land/DSC_7523.jpg" alt="">
    </div>
  </div>

  {% include '../components/footer.twig' %}

  <!-- https://highlightjs.org/ -->
  <link rel="stylesheet"
        href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.15.6/styles/default.min.css">
  <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.15.6/highlight.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      document.querySelectorAll('pre code').forEach((block) => {
        hljs.highlightBlock(block);
      });
    });
  </script>

{% endblock %}
